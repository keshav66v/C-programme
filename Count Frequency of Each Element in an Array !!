#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0 ; i<n; i++){
        scanf("%d", &arr[i]);
    }
    //logic to count frequency of each element in a array
    for(int i=0; i<n; i++){
        int flag = 0;
        for(int j=0; j<i; j++){
            if(arr[i]==arr[j]){
                flag=1;
                break;
            }
        
        }
        if(flag == 0){
            int count = 0;
            for (int j=i; j<n; j++){
                if(arr[i]==arr[j])
                    count++;
            }
            
        
   
   
          printf("%d: %d\n", arr[i],count );
        }
    }
    return 0;
}
